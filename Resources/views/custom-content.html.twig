{% if content is defined %}
  {% for item in content %}
    {% if item.value is defined  %}
      <div class="hbm-custom-content-{{ type }}">
        {{ item.value }}
      </div>
    {% elseif item.html is defined %}
      {{ item.html|raw }}
    {% elseif item.template is defined %}
      {% include item.template.name with item.template.params only %}
    {% endif %}
  {% endfor %}
{% endif %}
